{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./*"],
      "~/*": ["../../*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
