{
  "name": "@roysupriyo10/build",
  "description": "simplifier builder cli that can build packages/node/vite with a simple configuration",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./builders": {
      "types": "./dist/builders/index.d.ts",
      "default": "./dist/builders/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "default": "./dist/config/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    }
  },
  "bin": {
    "build": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "typecheck": "tsc -p ./tsconfig.json",
    "build": "pnpm run typecheck && tsup",
    "dev": "tsup --watch"
  },
  "dependencies": {
    "citty": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@roysupriyo10/types": "workspace:*",
    "@types/node": "catalog:"
  },
  "peerDependencies": {
    "vite": "catalog:"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  }
}
