// common tsconfig for general packages/apps in this repo
{
  "compilerOptions": {
    // these are basic module types, i will always use esm with bundler type imports, for node this will be resolved using a specific loader that will be exposed
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext"],

    // type checking vars, general configuration that help me maintain sanity
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "noEmit": true,

    // enable json imports and isolated modules for const enums, etc, other typescript gotchas
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  }
}
